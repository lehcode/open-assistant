{
  "name": "email",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "email/src",
  "projectType": "application",
  "tags": ["email ui openassistant"],
  "// targets": "to see all targets run: nx show project email --web",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "web",
        "compiler": "tsc",
        "outputPath": "dist/email",
        "main": "email/src/main.tsx",
        "tsConfig": "email/tsconfig.app.json",
        "assets": ["email/src/assets"],
        "webpackConfig": "email/webpack.config.js"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": false
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "fileReplacements": [
            {
              "replace": "email/src/environments/environment.ts",
              "with": "email/src/environments/environment.production.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nx/webpack:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "email:build",
        "hmr": true,
        "watch": true,
        "waitUntilTargets": ["email:build"],
        "proxyConfig": "email/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "email:build:development",
          "inspect": true,
          "runtimeArgs": ["--inspect=0.0.0.0:9229 --host=0.0.0.0"]
        },
        "production": {
          "buildTarget": "email:build:production",
          "inspect": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    }
  }
}
