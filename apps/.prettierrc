{
  "trailingComma": "none",
  "tabWidth": 2,
  "semi": true,
  "singleQuote": false,
  "printWidth": 120,
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],
      "options": {
        "singleQuote": true,
        "semi": true,
        "trailingComma": "es5",
        "arrowParens": "always"
      }
    },
    {
      "files": ["*.js", "*.mjs"],
      "options": {
        "singleQuote": false,
        "semi": true,
        "trailingComma": "es5",
        "arrowParens": "always"
      }
    },
    {
      "files": ["*.html"],
      "options": {
        "tabWidth": 4,
        "htmlWhitespaceSensitivity": "css"
      }
    },
    {
      "files": ["*.json"],
      "options": {}
    },
    {
      "files": ["*.yml", "*.yaml"],
      "options": {}
    },
    {
      "files": ".prettierrc",
      "options": { 
        "parser": "json"
      }
    }
  ]
}
