{
  "name": "api",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "api/src",
  "projectType": "application",
  "tags": ["api nestjs openassistant"],
  "// targets": "to see all targets run: nx show project api --web",
  "targets": {
    "build": {
      "executor": "@nx/webpack:webpack",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "target": "node",
        "compiler": "tsc",
        "outputPath": "dist/api",
        "main": "api/src/main.ts",
        "tsConfig": "api/tsconfig.app.json",
        "webpackConfig": "api/webpack.config.js"
      },
      "configurations": {
        "development": {
          "optimization": false,
          "extractLicenses": false,
          "inspect": false,
          "env": {
            "NODE_ENV": "development"
          }
        },
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "api:build",
        "watch": true,
        "waitUntilTargets": ["api:build"]
      },
      "configurations": {
        "development": {
          "buildTarget": "api:build:development",
          "inspect": true,
          "watch": true,
          "runtimeArgs": ["--inspect=0.0.0.0:9229"],
          "env": {
            "NODE_ENV": "development"
          }
        },
        "production": {
          "buildTarget": "api:build:production",
          "inspect": false,
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["api/**/*.ts", "api/**/*.tsx"],
        "eslintConfig": "api/eslint.config.js",
        "verbose": true
      },
      "env": {
        "NODE_ENV": "production"
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "api/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      },
      "env": {
        "NODE_ENV": "testing"
      }
    }
  }
}
