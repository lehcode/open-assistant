{
  
  "extends": "../../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "{workspaceRoot}/dist/out-tsc",
    "declaration": true,
    "types": ["node"],
    "allowJs": true
  },
  "files": ["src/index.ts"],
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/lib/**/*.ts"],
  "exclude": ["jest.config.ts", "src/**/*.spec.ts", "src/**/*.test.ts"],
  "references": [
    {
      "path": "./tsconfig.lib.json"
    },
    {
      "path": "./tsconfig.spec.json"
    }
  ]
}
