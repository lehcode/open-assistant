{
  "name": "admin",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "admin/src",
  "// targets": "to see all targets run: nx show project admin --web",
  "targets": {
    "test": {
      "executor": "@nx/vite:test",
      "defaultConfiguration": "testing",
      "configurations": {
        "testing": {
          "testTarget": "admin:test",
          "watch": true,
          "runtimeArgs": ["--inspect=0.0.0.0:9229"],
          "testFiles": ["src/**/*.{test,spec}.{ts}"],
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "development"
          }
        },
        "staging": {
          "testTarget": "admin:test:staging",
          "testFiles": ["src/**/*.{test,spec}.{ts}"],
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "staging"
          }
        },
        "production": {
          "testTarget": "admin:test:production",
          "testFiles": ["src/**/*.{test,spec}.{ts}"],
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "defaultConfiguration": "production",
      "testFiles": ["src/**/*.{ts}"],
      "outputs": ["{options.outputFile}"],
      "configurations":{
        "production": {
          "testTarget": "admin:test:production",
          "testFiles": ["src/**/*.{test,spec}.{ts}"],
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    }
  }
}
