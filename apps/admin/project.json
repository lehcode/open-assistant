{
  "name": "admin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "{workspaceRoot}/admin/src",
  "targets": {
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "admin:build",
        "port": 4200,
        "proxyConfig": "apps/admin/proxy.conf.json"
      },
      "configurations": {
        "development": {
          "buildTarget": "admin:build:development",
          "hmr": true
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "defaultConfiguration": "testing",
      "configurations": {
        "testing": {
          "testTarget": "admin:test",
          "watch": true,
          "runtimeArgs": ["--inspect=0.0.0.0:9229"],
          "testFiles": ["src/**/*.{test,spec}.{ts}"],
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "development"
          }
        },
        "staging": {
          "testTarget": "admin:test:staging",
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "staging"
          }
        },
        "production": {
          "testTarget": "admin:test:production",
          "testFiles": ["src/**/*.{test,spec}.{ts}"],
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "defaultConfiguration": "production",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["{projectRoot}/src/**/*.{ts,vue}"],
        "eslintConfig": "{projectRoot}/eslint.config.cjs",
        "verbose": true
      },
      "configurations": {
        "production": {
          "globals": true,
          "environment": "jsdom",
          "passWithNoTests": true,
          "env": {
            "NODE_ENV": "production"
          }
        }
      }
    }
  }
}
